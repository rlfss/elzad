<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="products" inherit_id="website_sale.products" name="Elzad Products">
        <xpath expr="//div[@class='container py-2 oe_website_sale']" position="replace">
            <section class="my-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="point-container">
                                <i class="fa fa-heart"></i>
                                <p class="m-0 d-inline-block">
                                    200 point
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 justify-content-center justify-content-lg-start">
                        <div class="col-lg-4">
                            <div class="search-container">
                                <form action="#">
                                    <button class="btn-4" type="submit">
                                        <i class="far fa-search"></i>
                                    </button>
                                    <input type="text" class="shadow-sm" placeholder="Search..."/>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <t t-call="portal.pager"/>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <t t-foreach="bins" t-as="tr_product">
                            <t t-foreach="tr_product" t-as="td_product">
                                <t t-if="td_product">
                                    <t t-set="product" t-value="td_product['product']"/>
                                    <t t-set="product_image_big" t-value="td_product['x']+td_product['y'] &gt; 2"/>
                                    <t t-set="product_href"
                                       t-value="keep('/shop/product/%s' % slug(product), page=(pager['page']['num'] if pager['page']['num']&gt;1 else None))"/>

                                    <div class="col-lg-4 col-md-6">
                                        <a itemprop="url" t-att-href="product_href">
                                            <div class="store-card br-5 my-shadow overflow-hidden bg-white">
                                                <div class="point-container mb-0">
                                                    <p class="m-0 d-inline-block">
                                                        200 point
                                                    </p>
                                                </div>
                                                <div class="fave-icon-container">
                                                    <form action="#">
                                                        <input type="checkbox" id="fav1"/>
                                                        <label for="fav1">
                                                            <i class="fa fa-heart"></i>
                                                        </label>
                                                    </form>
                                                </div>
                                                <span t-field="product.image"
                                                      t-options="{'widget': 'image', 'resize': None if product_image_big else '300x300'}"/>
                                                <div class="store-card-btn w-100">
                                                    <form action="#">
                                                        <div class="row">
                                                            <div class="col-8 pr-0">
                                                                <button class="my-btn greenColor-bg btn-4 br-0 w-100">
                                                                    Order now
                                                                </button>
                                                            </div>
                                                            <div class="pl-0 col-4 pr-2">
                                                                <button class="my-btn pinkColor-bg btn-4 br-0 w-100 h-100">
                                                                    <i class="far fa-shopping-cart"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </t>
                        </t>
                    </div>
                    <div class="row mt-3 justify-content-center">
                        <div class="col-lg-12">
                            <t t-call="portal.pager"/>
                        </div>
                    </div>

                </div>
            </section>

        </xpath>
    </template>

    <template id="product" inherit_id="website_sale.product" name="Elzad Product">
        <xpath expr="//section[@id='product_detail']" position="replace">
            <section
                    t-attf-class="container my-5 oe_website_sale #{'discount' if combination_info['has_discounted_price'] else ''}"
                    id="product_detail">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="slider ">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <t t-set="variant_img"
                                               t-value="product_variant and product_variant.image_variant"/>
                                            <t t-set="image_ids" t-value="product.product_image_ids"/>
                                            <div id="o-carousel-product" class="carousel slide" data-ride="carousel"
                                                 data-interval="0">
                                                <div class="carousel-outer">
                                                    <div class="carousel-inner">
                                                        <div t-if="variant_img" class="carousel-item active"
                                                             t-field="product_variant.image"
                                                             t-options="{'widget': 'image', 'class': 'product_detail_img js_variant_img', 'alt-field': 'name', 'zoom': 'image', 'unique': str(product['__last_update']) + (str(product_variant['__last_update']) or ''), 'itemprop': 'image'}"/>
                                                        <div t-attf-class="carousel-item#{'' if variant_img else ' active'}"
                                                             t-field="product.image"
                                                             t-options="{'widget': 'image', 'class': 'product_detail_img', 'alt-field': 'name', 'zoom': 'image', 'unique': product['__last_update'], 'itemprop': 'image'}"/>
                                                        <t t-if="len(image_ids)" t-foreach="image_ids" t-as="pimg">
                                                            <div class="carousel-item" t-field="pimg.image"
                                                                 t-options='{"widget": "image", "class": "product_detail_img", "alt-field": "name", "zoom": "image", "itemprop": "image"}'/>
                                                        </t>
                                                    </div>

                                                    <t t-if="len(image_ids) or variant_img">
                                                        <a class="carousel-control-prev" href="#o-carousel-product"
                                                           role="button" data-slide="prev">
                                                            <span class="fa fa-chevron-left" role="img"
                                                                  aria-label="Previous" title="Previous"/>
                                                        </a>
                                                        <a class="carousel-control-next" href="#o-carousel-product"
                                                           role="button" data-slide="next">
                                                            <span class="fa fa-chevron-right" role="img"
                                                                  aria-label="Next" title="Next"/>
                                                        </a>
                                                    </t>
                                                </div>

                                                <ol class="carousel-indicators" t-if="len(image_ids) or variant_img">
                                                    <li t-if="variant_img" data-target="#o-carousel-product"
                                                        data-slide-to="0" class="active">
                                                        <img class="img img-fluid js_variant_img_small"
                                                             t-attf-src="/website/image/product.product/{{product_variant.id}}/image/90x90"
                                                             t-att-alt="product.name"/>
                                                    </li>
                                                    <li data-target="#o-carousel-product"
                                                        t-att-data-slide-to="1 if variant_img else '0'"
                                                        t-att-class="'' if variant_img else 'active'">
                                                        <img class="img img-fluid"
                                                             t-attf-src="/website/image/product.template/{{product.id}}/image/90x90"
                                                             t-att-alt="product.name"/>
                                                    </li>
                                                    <t t-if="len(image_ids)" t-foreach="image_ids" t-as="pimg">
                                                        <li data-target="#o-carousel-product"
                                                            t-att-data-slide-to="pimg_index + (variant_img and 2 or 1)">
                                                            <img class="img img-fluid"
                                                                 t-attf-src="/website/image/product.image/{{pimg.id}}/image/90x90"
                                                                 t-att-alt="pimg.name"/>
                                                        </li>
                                                    </t>
                                                </ol>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <form action="#">
                                <h2 class="mt-4">
                                    <span t-field="product.name"/>
                                </h2>

                                <t t-call="website_sale.product_price"/>

                                <div class="inc-dec-container big-inc-dec mt-3">
                                    <button type="button" class="minus-btn">
                                        -
                                    </button>
                                    <input disabled="disabled" data-min="0" data-max="50" class="number-cunt" value="0"
                                           type="text"/>
                                    <button type="button" class="plus-btn">
                                        +
                                    </button>
                                </div>
                                <h4 class="mb-0 mt-5">
                                    Details :
                                </h4>

                                <p t-field="product.description_sale" class="fs-16"/>
                                <div>
                                    <button class="my-btn pinkColor-bg btn-4">
                                        Buy now
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

    <template id="product_price" inherit_id="website_sale.product_price">
        <xpath expr="//div[@class='product_price mt16']" position="replace">
            <div itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer" class="product_price mt16">
                <h2 class="oe_price_h4 css_editable_mode_hidden mt-1 fw-700">
                    <span t-attf-class="text-danger oe_default_price {{'' if combination_info['has_discounted_price'] else 'd-none'}}"
                          style="text-decoration: line-through; white-space: nowrap;"
                          t-esc="combination_info['list_price']"
                          t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"
                    />
                    <b class="oe_price" style="white-space: nowrap;" t-esc="combination_info['price']"
                       t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                    <span itemprop="price" style="display:none;" t-esc="combination_info['price']"/>
                    <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>
                </h2>
                <h2 class="css_non_editable_mode_hidden decimal_precision mt-1 fw-700"
                    t-att-data-precision="str(website.currency_id.decimal_places)">
                    <span t-field="product.list_price"
                          t-options='{
                   "widget": "monetary",
                   "display_currency": product.currency_id,
               }'/>
                </h2>
                <h2 class="d-none oe_not_available bg-warning">Option not available</h2>
            </div>
        </xpath>
    </template>

</odoo>