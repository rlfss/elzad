<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="footer_custom_elzad" inherit_id="website.layout" name="Footer Elzad">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                <section class="s_download_app pt-60 pb-60">
                    <div class="container">
                        <div class="row text-center align-items-center">
                            <div class="col-md-6">
                                <h3>Download our app now</h3>
                            </div>
                            <div class="col-md-6">
                                <a href="#" class="btn-download-app">
                                    <img src="/elzad_theme/static/src/img/btn-google-play.png"/>
                                </a>
                                <a href="#" class="btn-download-app">
                                    <img src="/elzad_theme/static/src/img/btn-app-store.png"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="s_footer">
                    <t t-call="elzad_theme.bar_top"/>
                    <div class="footer-bottom text-center pt-20 pb-20">
                        <div class="container">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-lg-auto">
                                    <div class="social mt-10 mb-10">
                                        <a t-if="website.social_linkedin" t-att-href="website.social_linkedin"
                                           class="btn btn-sm btn-link">
                                            <i class="fa fa-linkedin"/>
                                        </a>
                                        <a t-if="website.social_youtube" t-att-href="website.social_youtube"
                                           class="btn btn-link">
                                            <i class="fa fa-youtube-play"/>
                                        </a>
                                        <a t-if="website.social_facebook" t-att-href="website.social_facebook"
                                           class="btn btn-link">
                                            <i class="fa fa-facebook"/>
                                        </a>
                                        <a t-if="website.social_twitter" t-att-href="website.social_twitter"
                                           class="btn btn-link">
                                            <i class="fa fa-twitter"/>
                                        </a>
                                        <a t-if="website.social_instagram" t-att-href="website.social_instagram"
                                           class="btn btn-link">
                                            <i class="fa fa-instagram"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-auto">
                                    <div class="mt-10 mb-10">
                                        Copyright Â© Elzad for marketing and e-commerce
                                    </div>
                                </div>
                                <div class="col-lg-auto">
                                    <div class="mt-10 mb-10">
                                        Powered by&amp;nbsp;
                                        <a href="#" target="_blank">
                                            <img src="/elzad_theme/static/src/img/logo_sahara.png"
                                                 alt="Sahara International group" width="70"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>
    <template id="language_selector_elzad" inherit_id="website.language_selector">
        <xpath expr="//button//span" position="before">
            <i class="fa fa-globe"></i>
        </xpath>
        <xpath expr="//div[hasclass('dropup')]" position="attributes">
            <attribute name="class">dropdown</attribute>
        </xpath>
    </template>
    <template id="layout_footer_copyright_elzad" inherit_id="website.layout_footer_copyright">
        <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace"/>
    </template>
</odoo>