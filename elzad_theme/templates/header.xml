<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--  Bar top  -->
    <template id="bar_top" name="Bar top">
        <div class="bar-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <t t-call="website.language_selector"/>
                    </div>
                    <div class="col-md-6">
                        <ul class="mini-nav mb-0">
<!--                            <li>-->
<!--                                <a href="/"><i class="fa fa-home"></i>&amp;nbsp;Home-->
<!--                                </a>-->
<!--                            </li>-->
                            <li t-if="not user_id._is_public()">
                                <a href="/my/home"><i class="fa fa-user"></i>&amp;nbsp;My account
                                </a>
                            </li>
                            <li t-if="not user_id._is_public()">
                                <a t-attf-href="/web/session/logout?redirect=/" role="menuitem"><i
                                        class="fa fa-sign-out"></i>&amp;nbsp;Logout
                                </a>
                            </li>
                            <t t-set="signup_enabled"
                               t-value="request.env['ir.config_parameter'].sudo().get_param('auth_signup.invitation_scope') == 'b2c'"/>
                            <li t-if="signup_enabled and user_id._is_public()">
                                <a t-attf-href="/web/signup?{{ keep_query() }}"><i class="fa fa-lock"></i>&amp;nbsp;Sign
                                    Up
                                </a>
                            </li>
                            <li groups="base.group_public">
                                <a t-attf-href="/web/login">
                                    <i class="fa fa-sign-in"></i>&amp;nbsp;Sign in
                                </a>
                            </li>
                            <li>
                                <a href="/"><i class="fa fa-envelope"></i>&amp;nbsp;Contact
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!--  Frontend Layout  -->
    <template id="frontend_layout" inherit_id="portal.frontend_layout" name="Main Frontend Layout Elzad">
        <xpath expr="//header" position="before">
            <t t-call="elzad_theme.bar_top"/>
        </xpath>
        <xpath expr="//li[@class='nav-item divider']" position="attributes">
            <attribute name="style">display:none!important;</attribute>
        </xpath>
        <xpath expr="//li[@class='nav-item dropdown']" position="attributes">
            <attribute name="style">display:none!important;</attribute>
        </xpath>
    </template>

    <template id="portal_hide_sign_in" inherit_id="portal.portal_show_sign_in" name="Hide Sign In">
        <xpath expr="//li[hasclass('divider')][last()]" position="attributes">
            <attribute name="style">display:none!important;</attribute>
        </xpath>
        <xpath expr="//li[hasclass('nav-item')][last()]" position="attributes">
            <attribute name="style">display:none!important;</attribute>
        </xpath>
        <!--        <xpath expr="//li[hasclass('nav-item')]" position="attributes">-->
        <!--            <attribute name="class">nav-item d-none</attribute>-->
        <!--        </xpath>-->
        <!--        <xpath expr="//li[hasclass('nav-item')]" position="replace"/>-->
    </template>

    <!--  Wishlist  -->
    <template id="header_wish" inherit_id="website_sale_wishlist.header" name="Header Shop Wishlist Link Elzad">
        <xpath expr="//li[@id='my_wish']" position="replace">
            <li id="my_wish" class="nav-item" t-att-style="not wishcount and 'display:none;'">
                <a href="/shop/wishlist" class="nav-link">
                    <i class="fa fa-heart-o"/>
                    <sup t-attf-class="my_wish_quantity o_animate_blink badge badge-light">
                        <t t-esc='wishcount'/>
                    </sup>
                </a>
            </li>
        </xpath>
    </template>

    <!--  Cart  -->
    <template id="header_cart" inherit_id="website_sale.header" name="Header Shop My Cart Link Elzad">
        <xpath expr="//a[hasclass('nav-link')]" position="replace">
            <a href="/shop/cart" class="nav-link">
                <i class="fa fa-shopping-cart"></i>
                <sup t-attf-class="my_cart_quantity badge badge-light"
                     t-esc="website_sale_order and website_sale_order.cart_quantity or ''"/>
            </a>
        </xpath>
    </template>

    <!--  Search  -->
    <template id="custom_seach_icon_header" inherit_id="website.layout" name="Header Product Search Icon">
        <xpath expr="//header//ul[@id='top_menu']/li" position="before">
            <li id="nav-search" class="nav-item">
                <a href="#search-button" class="nav-link">
                    <i class="fa fa fa-search"/>
                </a>
                <div class="search" id="search-box">
                    <form action='/shop' method="get">
                        <input type="text" name="search"
                               placeholder="Product Name"
                               class="search-input" t-att-value="search"/>
                        <button class="btn btn-success btn-slider">Search</button>
                        <button type="button" class="close">Ã—</button>
                    </form>
                </div>
            </li>
        </xpath>
    </template>

</odoo>