<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="products_elzad" inherit_id="website_sale.products" name="Products Elzad">
       <xpath expr="//div[@id='oe_structure_website_sale_products_1']" position="before">
            <t t-call="elzad_theme.homepage_categories" t-if="len(categories)>0"/>
       </xpath>
   </template>
    <!--  delete breadcrumb -->
   <template id="product_elzad" inherit_id="website_sale.product" name="Product">
        <xpath expr="//ol[hasclass('breadcrumb')]" position="replace"/>
        <xpath expr="//div[@id='product_details']" position="attributes">
            <attribute name="class">col-md-6 col-xl-4</attribute>
        </xpath>
        <xpath expr="//t[@t-call='website_sale.product_price']" position="replace"/>
        <xpath expr="//div[@id='product_details']//h1" position="after">
            <t t-call="website_sale.product_price" />
        </xpath>
   </template>
</odoo>