<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_layout_elzad" inherit_id="website.login_layout" name="Website Login Layout Elzad">
        <xpath expr="//div[hasclass('oe_website_login_container')]" position="replace">
            <div class="container">
                <div class="oe_website_login_container" t-raw="0"/>
            </div>
        </xpath>
    </template>

    <template id="login_elzad" inherit_id="web.login" name="Login Elzad">
        <xpath expr="//form" position="before">
            <h1 class="title_page">SIGN IN</h1>
        </xpath>
        <xpath expr="//button[@type='submit']" position="replace">
            <button type="submit" class="btn btn-primary mt-2"><i class="fa fa-user"></i>&amp;nbsp;Log in
            </button>
        </xpath>
        <xpath expr="//div[hasclass('field-password')]" position="after">
            <div class="justify-content-between d-flex small">
                <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
            </div>
        </xpath>
    </template>

    <!--  Delete default Sign up - Reset Password  -->
    <template id="auth_signup_login" inherit_id="auth_signup.login" name="Delete default Sign up - Reset Password">
        <xpath expr="//div[hasclass('justify-content-between')]" position="replace"/>
    </template>

</odoo>