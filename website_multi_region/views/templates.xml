<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Custom CSS-JS">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/website_multi_region/static/src/css/popup.css"/>
            <script src="/website_multi_region/static/src/js/popup.js" type="text/javascript"></script>
        </xpath>
    </template>

    <template id="modal_popup_in_header" inherit_id="website.layout" name="Modal Popup in Header">
        <xpath expr="//header//nav[@class='navbar navbar-expand-md navbar-light bg-light']" position="before">

            <!-- Popup -->
            <div style="display:none;" id="popup-modal" class="chch-pro">
                <div
                        class="cc-pop-up-pro cc-pop-up cc-theme__aqua cc-template__newsletter cc-position__fixed cc-size__small cc-inputs__one ">

                    <div class="cc-pop-up__bg"></div>

                    <article class="cc-pop-up__article">
                        <div class="cc-pop-up__modal" style="top: 15px;">
                            <a class="cc-pop-up__close" data-modalId="14039"
                               data-views-control="yes" data-expires-control="session">
                                <i class="fa fa-times"></i>
                            </a>

                            <div class="cc-pop-up__content cc-pop-up__content--header">
                                <p style="text-align: center">
                                    <span style="font-size: 20px">Choose Branch Please.
                                    </span>
                                </p>
                            </div>

                            <t t-set="br" t-value="request.env['website.branches'].get_branches_available()"/>
                            <a role="button" href="#" class="dropdown-toggle form-control" data-toggle="dropdown">
                                Branches
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <t t-foreach="br" t-as="pl">
                                    <a role="menuitem" t-att-href="'/shop/change_branch/%s' % pl.id"
                                       class="dropdown-item">
                                        <span class="switcher_pricelist" t-esc="pl.name"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                    </article>
                </div>

            </div>

            <!-- popup end -->
        </xpath>
    </template>

    <template id="bar_top" inherit_id="elzad_theme.bar_top" name="Bar nav Branche Button">
        <xpath expr="//div[hasclass('col-md-6')]" position="after">
            <div class="col-md-2">
                <t t-set="br" t-value="request.env['website.branches'].get_branches_available()"/>
                <div class="list-inline-item text-center">
                    <div class="dropdown">
                        <a role="button" href="#" class="dropdown-toggle btn btn-secondary btn-sm"
                           data-toggle="dropdown">
                            <!-- Branches -->
                            <t t-set="curr_br" t-value="request.env['website.branches'].get_current_branch()"/>
                            <t t-esc="curr_br or ' - '"/>
                        </a>
                        <div class="dropdown-menu" role="menu">
                            <t t-foreach="br" t-as="pl">
                                <a role="menuitem" t-att-href="'/shop/change_branch/%s' % pl.id" class="dropdown-item">
                                    <span class="switcher_pricelist" t-esc="pl.name"/>
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('col-md-6')]" position="attributes">
            <attribute name="class">col-md-5</attribute>
        </xpath>
        <xpath expr="//div[hasclass('col-md-6')][last()]" position="attributes">
            <attribute name="class">col-md-5</attribute>
        </xpath>
    </template>
</odoo>