<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="res_config_settings_view_form_updated" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.website.updated</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='utm_tracker_settings']" position="after">
                			<div id="multi_region" class="col-12 col-md-6 o_setting_box">
                			<div class="o_setting_left_pane">
                                    <field name="has_multi_region"/>
                                </div>
                	  			<div class="o_setting_right_pane">
                                    <label for="has_multi_region"/>
                                    <div class="text-muted">
                                        Use Multi-region feature on your website
                                    </div>
                                   <!--  <div class="content-group" attrs="{'invisible': [('has_multi_region', '=', False)]}">
                                        <div class="row mt16">
                                            <label class="col-lg-3 o_light_label" string="Regions" for="regions"/>
                                            <field name="regions" attrs="{'required': [('has_multi_region', '=', True)]}" />
                                        </div>
                                    </div> -->
                                </div>
                            </div>
                </xpath>
            </field>
        </record>
</odoo>
